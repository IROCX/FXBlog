<%- include('../partials/header')%>
<style>
    .postEditor {
        max-width: 60%;
    }

    @media (max-width: 840px) {
        .postEditor {
            max-width: 90%;
            padding-top: 10%;
        }
    }
</style>

<div class="container postEditor" style="margin-top: 10%;">
    <div class="row justify-content-center">
        <div class="h2 text-center">Create a new Blog Post</div>
    </div>

    <form action="/posts" method="post">
        <div class="row-fluid form-group">
            <label for="">Name</label>
            <input autocomplete="off" class="form-control" type="text" name="name" placeholder="Your blog post title">
        </div>

        <div class="row-fluid form-group">

            <label for="">Image URL</label><br>
            <div class="row">
                <textarea autocomplete="off" type="text" name="image" placeholder="http://www.image.com" rows="3"
                    style="width: 95%; margin:auto; border:1px solid #ced4da; padding:2%"></textarea>
            </div>
        </div>
        <div class="row-fluid form-group">
            <label for="">Description</label><br>
            <div class="row">
                <textarea autocomplete="off" type="text" name="desc" placeholder="Write your blog post content here..." rows="10"
                    style="width: 95%; margin:auto; border:1px solid #ced4da; padding:2%"></textarea>
            </div>
        </div>

        <div class="d-flex justify-content-around">
            <div class="btn-group">
                <input class="btn btn-outline-success" type="submit">
                <button type="button" class="btn btn-outline-danger ml-1" onclick="location.href='/posts'">Go
                    Back</button>
            </div>
        </div>
    </form>
</div>


<%- include('../partials/footer')%>