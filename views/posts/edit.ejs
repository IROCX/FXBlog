<%- include('../partials/header')%>

<style>
    .postEditor {
        max-width: 60%;
    }

    @media (max-width: 840px) {
        .postEditor {
            max-width: 90%;
            padding-top: 10%;
        }
    }
</style>

<div class="container postEditor" style="margin-top: 10%;">
    <div class="row justify-content-center">
        <div class="h2 text-center">Edit new <%=editPost.name%></div>
    </div>

    <form action="/posts/<%=editPost._id%>?_method=PUT" method="post">

        <div class="row-fluid form-group">
            <label for="">Name</label>
            <input class="form-control" type="text" name="updateData[name]" value="<%=editPost.name%>">
        </div>

        <div class="row-fluid form-group">
            <label for="">Image URL</label><br>
            <div class="row">
                <textarea type="text" name="updateData[image]" rows="4" style="width: 95%; margin:auto; border:1px solid #ced4da;
                    padding:2%"><%=editPost.image%></textarea>
            </div>
        </div>
        <div class="row-fluid form-group">
            <label for="">Description</label><br>
            <div class="row">
                <textarea type="text" name="updateData[description]" rows="10" style="width: 95%; margin:auto; border:1px solid #ced4da;
                    padding:2%;"><%=editPost.description%></textarea>
            </div>
        </div>

        <div class="d-flex justify-content-around">
            <div class="btn-group">
                <input class="btn btn-outline-success" type="submit" value="Save">
                <button type="button" class="btn btn-outline-danger ml-1"
                    onclick="location.href='/posts'">Discard</button>
            </div>
        </div>
    </form>
</div>

<%- include('../partials/footer')%>