<%include ../partials/header%>


<div class="ui container">

    <h1 style="margin-top: 10%" class="ui header center aligned">Add new comment to <%=campground.name%></h1>

    <form action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div style=" width:50%;margin:0 auto" class="ui form">

            <div class="field">
                <label for="">Comment</label>
                <textarea name="comment[text]" cols="30" rows="10" placeholder="Your comment goes here..."></textarea>
            </div>

            <div class="ui fluid buttons">
                <input type="submit" class="ui positive button" value="Save"></input>
                <div class="or"></div>
                <button type="button" onclick="location.href='/campgrounds/<%=campground._id%>'"
                    class="ui button basic green">GoBack</button>
            </div>

        </div>


    </form>
</div>
</div>



<%include ../partials/footer%>