<%include ../partials/header%>

<style>
    .commentEditor {
        max-width: 60%;
    }

    @media (max-width: 840px) {
        .commentEditor {
            max-width: 90%;
            padding-top: 10%;
        }
    }
</style>

<div class="container commentEditor" style="margin-top: 10%;">
    <div class="row justify-content-center">
        <div class="h3 text-center"> <i class="user plus icon"></i> Add new comment for</div><br>
    </div>
    <div class="row justify-content-center">
        <div class="h2 text-center"> <%=post.name%></div>
    </div>

    <form action="/posts/<%=post._id%>/comments" method="post">

        <div class="row-fluid form-group">
            <label for="">Comment</label> <br>
            <div class="row">
                <textarea class="form-control" name="comment[text]" cols="30" rows="10"
                    placeholder="Your comment goes here..."></textarea>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <div class="btn-group">
                <input class="btn btn-outline-success" type="submit" value="Save">
                <button type="button" class="btn btn-outline-danger ml-1"
                    onclick="location.href='/posts/<%=post._id%>'">Go
                    Back</button>
            </div>
        </div>
    </form>
</div>

<%include ../partials/footer%>